---
// Importa estilos globales (Tailwind v4 via PostCSS) reusando tu CSS de Next
import '../styles/global.css'

// Importa componentes React existentes como islas
import { Navigation } from '../../components/navigation'
import { HeroSection } from '../../components/hero-section'
import { BiographySection } from '../../components/biography-section'
import { GallerySection } from '../../components/gallery-section'
import { ContactSection } from '../../components/contact-section'
import { ParallaxMountains } from '../../components/parallax-mountains'
import { SpiralDecorations } from '../../components/spiral-decorations'
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
    <title>Luna Kuyen | Artista Escénica</title>
    <meta name="description" content="Portafolio de Luna Kuyen - Actriz, bailarina y performer. Descubre mi trabajo en teatro, danza contemporánea y artes escénicas." />
  </head>
  <body>
    <main class="relative min-h-screen overflow-x-hidden">
      <!-- <ParallaxMountains client:load /> -->
      <SpiralDecorations client:load />
      <Navigation client:load />
      <HeroSection client:load />
      <BiographySection client:load />
      <GallerySection client:load />
      <ContactSection client:load />
    </main>
  </body>
</html>
