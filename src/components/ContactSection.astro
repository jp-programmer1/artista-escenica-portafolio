<section id="contacto" class="relative z-20 py-32 px-6 bg-card/30" data-contact>
  <div class="container mx-auto max-w-5xl">
    <div class="text-center mb-16">
      <p class="text-primary text-sm uppercase tracking-[0.3em] mb-4">Hablemos</p>
      <h2 class="text-3xl md:text-5xl font-bold text-foreground mb-4">Contacto</h2>
      <p class="text-muted-foreground max-w-lg mx-auto">
        ¿Tienes un proyecto en mente? Me encantaría escuchar tus ideas y explorar nuevas oportunidades de
        colaboración.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 transition-all duration-1000 opacity-0 translate-y-10" data-contact-grid>
      <!-- Contact Info -->
      <div class="space-y-8">
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary/10 flex items-center justify-center shrink-0">
            <!-- Mail icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2Z"/><path d="m22 6-10 7L2 6"/></svg>
          </div>
          <div>
            <h3 class="font-semibold text-foreground mb-1">Email</h3>
            <a href="mailto:contacto@valentinareyes.com" class="text-muted-foreground hover:text-primary transition-colors">contacto@valentinareyes.com</a>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary/10 flex items-center justify-center shrink-0">
            <!-- Phone icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6A19.79 19.79 0 0 1 2.1 4.18 2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.12.81.3 1.6.57 2.36a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.72-1.14a2 2 0 0 1 2.11-.45c.76.27 1.55.45 2.36.57A2 2 0 0 1 22 16.92Z"/></svg>
          </div>
          <div>
            <h3 class="font-semibold text-foreground mb-1">Teléfono</h3>
            <a href="tel:+34600123456" class="text-muted-foreground hover:text-primary transition-colors">+34 600 123 456</a>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary/10 flex items-center justify-center shrink-0">
            <!-- MapPin icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 5.5-8 12-8 12S4 15.5 4 10a8 8 0 1 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
          </div>
          <div>
            <h3 class="font-semibold text-foreground mb-1">Ubicación</h3>
            <p class="text-muted-foreground">Madrid, España</p>
          </div>
        </div>

        <!-- Social Links -->
        <div class="pt-8 border-t border-border">
          <h3 class="font-semibold text-foreground mb-4">Sígueme</h3>
          <div class="flex gap-4">
            <a href="#" class="w-12 h-12 bg-secondary flex items-center justify-center hover:bg-primary hover:text-primary-foreground transition-colors duration-300" aria-label="Instagram">
              <!-- Instagram icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
            </a>
            <a href="#" class="w-12 h-12 bg-secondary flex items-center justify-center hover:bg-primary hover:text-primary-foreground transition-colors duration-300" aria-label="YouTube">
              <!-- YouTube icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 12a29 29 0 0 0 .46 5.58 2.78 2.78 0 0 0 1.94 2C5.12 20 12 20 12 20s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2A29 29 0 0 0 23 12a29 29 0 0 0-.46-5.58Z"/><path d="m9.75 15.02 5.2-3-5.2-3v6Z"/></svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <form class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-foreground mb-2">Nombre</label>
          <input type="text" id="name" class="w-full px-4 py-3 bg-input border border-border focus:border-primary focus:outline-none transition-colors text-foreground" placeholder="Tu nombre" />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-foreground mb-2">Email</label>
          <input type="email" id="email" class="w-full px-4 py-3 bg-input border border-border focus:border-primary focus:outline-none transition-colors text-foreground" placeholder="tu@email.com" />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-foreground mb-2">Mensaje</label>
          <textarea id="message" rows="5" class="w-full px-4 py-3 bg-input border border-border focus:border-primary focus:outline-none transition-colors resize-none text-foreground" placeholder="Cuéntame sobre tu proyecto..."></textarea>
        </div>
        <button type="submit" class="w-full py-4 bg-primary text-primary-foreground uppercase tracking-widest text-sm hover:bg-accent transition-colors duration-300">Enviar Mensaje</button>
      </form>
    </div>

    <!-- Footer -->
    <div class="mt-24 pt-8 border-t border-border text-center">
      <p class="text-muted-foreground text-sm">© 2025 Valentina Reyes. Todos los derechos reservados.</p>
    </div>
  </div>
</section>

<script>
  const section = document.querySelector('[data-contact]') as HTMLElement | null;
  const grid = document.querySelector('[data-contact-grid]') as HTMLElement | null;

  if (section && grid) {
    const observer = new IntersectionObserver(
      ([entry]) => {
        if (entry.isIntersecting) {
          grid.classList.remove('opacity-0');
          grid.classList.remove('translate-y-10');
          grid.classList.add('opacity-100');
          grid.classList.add('translate-y-0');
        }
      },
      { threshold: 0.2 }
    );
    observer.observe(section);
  }
</script>
